<div class="container mt-4">
<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <h2 class="text-center">User info</h2>

    <% if @user.errors.any? %>
      <div class="error">
        <h3><%= @user.errors.count %> errors occurred!</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li class="error-message"><%= message %></li>
          <% end %>
        </ul>
      </div>
     <% end %>

      <%= form_with model: @user do |f| %>
      <p>
        <label for="inputName">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName"%>
      </p>
      <p>
        <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </p>
      <p>
        <label for="inputIntroduction">Introduction</label>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
      </p>

      <%= f.submit "Update User" %>
      <% end %>
    </div>
</div>
</div>