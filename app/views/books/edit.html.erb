<div class="container mt-4">
    <h1 class="text-center">Editing Book</h1>
    <% if @book.errors.any? %>
        <div class="error">
          <h3><%= @book.errors.count %> errors occurred!</h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li class="error-message"><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    
    <div class="row">
      <div class="col-xs-offset-3 col-xs-6">
        <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
          <h4>タイトル</h4>
          <%= f.text_field :title %>
          <h4>本文</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Update Book' %>
        <% end %>
        
        <div class="menu">
          <%= link_to "Show", book_path(@book.id) %>  | <a href="/books">Back</a>
        </div>
        
      </div>
    </div>
    
</div>